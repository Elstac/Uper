@{
    var returnUrl = ViewData["returnUrl"];
}

<form asp-controller="Login" asp-action="SignInAsync" asp-route-returnurl="@returnUrl">
    <h1>Sign In</h1>
    <p>Username:</p>
    <input type="text" name="Username" />
    <p>Password:</p>
    <input type="text" name="Password" height="120" width="120" />
    <input type="submit"/>
</form>



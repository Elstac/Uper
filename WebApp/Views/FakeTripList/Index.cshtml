@model IEnumerable<WebApp.Data.TripDetails>

@{
    ViewData["Title"] = "Index";
   
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartingAddress.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartingAddress.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DestinationAddress.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DestinationAddress.Street)

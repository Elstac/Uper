        <tr>
            <td>
                @Html.DisplayNameFor(modelItem => item.StartingAddress.City)
            </td>
            <td>
                @Html.DisplayNameFor(modelItem => item.StartingAddress.Street)
            </td>
            <td>
                @Html.DisplayNameFor(modelItem => item.DestinationAddress.City)
